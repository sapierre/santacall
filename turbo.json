{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".cache/tsbuildinfo.json", "dist/**", "build/**"]
    },
    "format": {
      "outputs": [".cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": [".cache/.eslintcache"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [".cache/tsbuildinfo.json"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": false
    },
    "clean": {
      "cache": false
    },
    "setup": {
      "cache": false,
      "dependsOn": ["@turbostarter/db#db:setup"]
    },
    "test": {
      "outputs": ["coverage.json"]
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "PRODUCT_NAME",
    "URL",
    "DEFAULT_LOCALE",
    "BETTER_AUTH_SECRET",
    "STRIPE_SECRET_KEY",
    "STRIPE_WEBHOOK_SECRET",
    "STRIPE_SANTACALL_WEBHOOK_SECRET",
    "TAVUS_API_KEY",
    "TAVUS_REPLICA_ID",
    "TAVUS_PERSONA_ID",
    "TAVUS_WEBHOOK_SECRET",
    "RESEND_API_KEY",
    "EMAIL_FROM",
    "CONTACT_EMAIL",
    "NEXT_PUBLIC_APP_URL",
    "NEXT_PUBLIC_PRODUCT_NAME",
    "NEXT_PUBLIC_URL",
    "SANTACALL_VIDEO_PRICE_CENTS",
    "SANTACALL_CALL_PRICE_CENTS"
  ],
  "globalPassThroughEnv": [
    "NODE_ENV",
    "SKIP_ENV_VALIDATION",
    "npm_lifecycle_event"
  ]
}
